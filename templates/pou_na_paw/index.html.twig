{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/homepage.css') }}">
{% endblock %}

{% block body %}

    <div id="mapdiv"></div>

    <div class="example-wrapper">
        <h1>Welcome to PouBus!</h1>
        <div id="map"></div>
        <form class="locations" method="post" action="/tziame">
            <div class="form-group">
                <label>Starting Point</label>
                <input type="text" class="form-control" name="start" placeholder="Give Starting Point">
            </div>
            <div class="form-group">
                <label>Destination</label>
                    <input type="text" class="form-control" name="end" placeholder="Give Destination">
            </div>
            <button type="submit" name="submit" class="btn btn-default btn-primary">Go</button>
        </form>

        <form class="locations">
            <h3>How to Use PouBus:</h3>
            <ol>
                <li>Enter your starting point</li>
                <li>Enter your destination point</li>
                <li>Press Go</li>
                <li>A route will be made just for you</li>

            </ol>
            <h3>Steps to your destination</h3>
            <ol>
                <li>Don't forget to get your local-shop discount by giving this number <b>ANGELHACK2011</b></li>
                {% for step in steps %}
                    <li>{{ step['html_instructions'] }}</li>
                {% endfor %}
                <li>Take the Bus 106 from Solomou Square</li>
            </ol>
        </form>
    </div>
{% endblock %}
